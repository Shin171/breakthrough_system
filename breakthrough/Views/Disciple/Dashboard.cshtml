@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/DiscipleLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card mt-4 shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Welcome to Your Dashboard, <span id="username">DISCIPLE NAME</span></h2>
                </div>
                <div class="card-body bg-light">

                    <!-- Assigned Quizzes Section -->
                    <div id="assignedQuizzesSection" class="mt-4">
                        <h5>Assigned Quizzes</h5>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <span>Quiz 1: Title</span>
                                    <button class="btn btn-outline-primary btn-sm">Take Quiz</button>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <span>Quiz 2: Title</span>
                                    <button class="btn btn-outline-primary btn-sm">Take Quiz</button>
                                </div>
                            </li>
                            <!-- More quizzes as needed -->
                        </ul>
                    </div>

                    <div class="row mb-4">
                        <div class="col">
                            <div id="imageCarousel" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="~/images/carousel3.jpg" class="d-block w-100 rounded" alt="Church Image 1">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/images/carousel2.jpg" class="d-block w-100 rounded" alt="Church Image 2">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/images/carousel.jpg" class="d-block w-100 rounded" alt="Church Image 3">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Submitted Answers Section -->
                    <div id="submittedAnswersSection" class="mt-4">
                        <h5>Your Submitted Answers</h5>
                        <ul class="list-group">
                            <li class="list-group-item">Quiz 1: Score: 85</li>
                            <li class="list-group-item">Quiz 2: Score: 78</li>
                            <!-- More answers as needed -->
                        </ul>
                    </div>

                    <!-- Uploaded Lessons Section -->
                    <div id="uploadedLessonsSection" class="mt-4">
                        <h5>Uploaded Lessons</h5>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <span>Lesson 1: Title</span>
                                    <button class="btn btn-outline-secondary btn-sm">View Document</button>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <span>Lesson 2: Title</span>
                                    <button class="btn btn-outline-secondary btn-sm">View Document</button>
                                </div>
                            </li>
                            <!-- More lessons as needed -->
                        </ul>
                    </div>

                    <!-- Course Progress Section -->
                    <div id="courseProgressSection" class="mt-4">
                        <h5>Your Course Progress</h5>
                        <div class="progress mb-2">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">60% Complete</div>
                        </div>
                        <ul class="list-group">
                            <li class="list-group-item">Course 1 - Completed</li>
                            <li class="list-group-item">Course 2 - 60% Complete</li>
                            <li class="list-group-item">Course 3 - Upcoming</li>
                        </ul>
                    </div>

                    <!-- Weekly Assignments Section -->
                    <div id="weeklyAssignmentsSection" class="mt-4">
                        <h5>Your Weekly Assignments</h5>
                        <ul class="list-group">
                            <li class="list-group-item">Assignment 1 - Due: Monday</li>
                            <li class="list-group-item">Assignment 2 - Due: Wednesday</li>
                            <li class="list-group-item">Assignment 3 - Due: Friday</li>
                        </ul>
                        <div class="text-right mt-2">
                            <button class="btn btn-outline-primary">View All Assignments</button>
                        </div>
                    </div>

                    <!-- Upcoming Events or Sessions Section -->
                    <div id="upcomingEventsSection" class="mt-4">
                        <h5>Upcoming Events/Sessions</h5>
                        <ul class="list-group">
                            <li class="list-group-item">Session 1 - Location: Branch A - Date: August 25</li>
                            <li class="list-group-item">Event 2 - Location: Branch B - Date: September 5</li>
                            <li class="list-group-item">Session 3 - Location: Branch C - Date: September 15</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>


