@{
    ViewBag.Title = "Home Page";
}

<h1 class="text-center mt-3" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #1E2A5E; font-weight: bold; ">
    Welcome to Breakthrough Christian Fellowship Church!
</h1>
<p class="text-center mt-2" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #666; font-size: 1.2em;">
    We are delighted to have you here. <br> Empowering Leaders, Discipling Nations.
</p>
<p class="text-center" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #666;">
    <em>"Together, we grow in faith and love."</em>
</p>


<!-- Carousel Section -->
<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="carousel slide" id="imageCarousel" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/images/carousel.jpg")" class="d-block w-100 rounded carousel-image" alt="Church Image 1">
                        <div class="carousel-caption d-none d-md-block">
                            <h3>Welcome to Breakthrough Church System</h3>
                            <p>Transform your spiritual journey with a comprehensive web-based platform designed for your faith growth and church operations.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/images/carousel2.jpg")" class="d-block w-100 rounded carousel-image" alt="Church Image 2">
                        <div class="carousel-caption d-none d-md-block">
                            <h3>Empower Your Faith</h3>
                            <p>Access discipleship training, track your progress, and deepen your relationship with Christ.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/images/carousel3.jpg")" class="d-block w-100 rounded carousel-image" alt="Church Image 3">
                        <div class="carousel-caption d-none d-md-block">
                            <h3>Stay Connected</h3>
                            <p>Never miss an event again with our calendar and notification system. Engage with your church community.</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- CSS -->
<style>
    /* Set a fixed height for the carousel */
    .carousel-item {
        height: 600px; /* Adjust as needed */
    }

    /* Make sure all images fill the carousel area without distortion */
    .carousel-image {
        object-fit: cover;
        height: 100%; /* Ensures image fills the height */
        width: 100%; /* Ensures image fills the width */
    }

    /* Optional: For consistent spacing between images */
    .carousel-caption {
        background: rgba(0, 0, 0, 0.5); /* Optional, adds a background to caption for better readability */
        padding: 15px;
        border-radius: 8px;
    }
</style>

<!-- Main Content Section -->
<div class="text-center mt-2">
    <h1>Join Us Today</h1>
    <p class="lead">Experience a more connected and fulfilling church life with the Breakthrough Church System. Whether you're a disciple looking to grow or a leader aiming to streamline operations, our system is designed to meet your needs.</p>
    <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg">Start the Explanatory Class</a>
</div>

<!-- Accordion Section for Interactive Content -->
<div class="accordion mt-5" id="accordionExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                Discipleship Training
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                Access and complete lessons at your own pace. Earn certifications and take the next step in your faith journey.
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Attendance Tracking
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                Automated and accurate tracking of member participation ensures that no one is left behind.
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingThree">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                Event Calendar
            </button>
        </h2>
        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                Stay informed with a comprehensive view of all church activities and events. Never miss out on what matters most.
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingFour">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                Communication Tools
            </button>
        </h2>
        <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                Seamless interaction with church members through built-in messaging features. Strengthen your community connections.
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingFive">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                Notifications
            </button>
        </h2>
        <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                Receive timely updates and reminders about church activities and personal progress, ensuring you stay on track.
            </div>
        </div>
    </div>
</div>

<!-- Include jQuery and Bootstrap JS libraries -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        // Initialize the carousel
        $('#imageCarousel').carousel({
            interval: 3000, // Set the interval for auto-sliding in milliseconds (3 seconds)
            pause: 'hover', // Pause the carousel when the mouse hovers over it
            wrap: true // When the carousel reaches the last slide, it wraps back to the first slide
        });
    });
</script>
