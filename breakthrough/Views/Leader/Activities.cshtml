@{
    ViewBag.Title = "Activities";
    Layout = "~/Views/Shared/LeaderLayout.cshtml";
}

@model IEnumerable<breakthrough.Models.Activity

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card mt-4 shadow-lg">
                <div class="card-header text-center">
                    <h2 class="mb-0">Activities</h2>
                    <p class="justify-content-between">
                        <a href="@Url.Action("AddQuiz", "Leader")" class="btn btn-primary mt-0">Add New Activity/Quiz</a>
                    </p>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Type of Activity</th>
                                <th>Date Created</th>
                                <th>Date Given</th>
                                <th>Due Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model)
                            {
                                <tr>
                                    <td>@activity.Title</td>
                                    <td>@activity.ActivityType</td>
                                    <td>@activity.DateCreated.ToString("yyyy-MM-dd")</td>
                                    <td>@activity.DateGiven?.ToString("yyyy-MM-dd") ?? "N/A"</td> <!-- Nullable DateGiven -->
                                    <td>@activity.DueDate?.ToString("yyyy-MM-dd") ?? "N/A"</td> <!-- Nullable DueDate -->
                                    <td>
                                        <!-- Button group for larger screens -->
                                        <div class="btn-group d-none d-lg-block">
                                            <a asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-warning">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@activity.Id" class="btn btn-danger">Delete</a>
                                            <a asp-action="Details" asp-route-id="@activity.Id" class="btn btn-info">View Details</a>
                                        </div>

                                        <!-- Dropdown for smaller screens -->
                                        <div class="dropdown d-block d-lg-none">
                                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                Actions
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@activity.Id">Edit</a></li>
                                                <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@activity.Id">Delete</a></li>
                                                <li><a class="dropdown-item" asp-action="Details" asp-route-id="@activity.Id">View Details</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
