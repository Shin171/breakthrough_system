
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/LeaderLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card mt-4 shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Welcome to the Leader Dashboard, <span id="username">LEADER NAME</span></h2>
                </div>
                <div class="card-body bg-light">
                    <!-- Leader Actions Section -->
                    <div class="row mb-4">
                        <div class="col text-center">
                            <button class="btn btn-primary btn-lg mb-3" data-toggle="modal" data-target="#createQuizModal">Create New Quiz</button>
                            <button class="btn btn-success btn-lg mb-3" data-toggle="modal" data-target="#viewAnswersModal">View Submitted Answers</button>
                            <button class="btn btn-info btn-lg mb-3" data-toggle="modal" data-target="#uploadLessonModal">Upload Lesson Document</button>
                            <button class="btn btn-warning btn-lg mb-3" data-toggle="modal" data-target="#editQuizModal">Edit Quiz or Essay</button>
                            <button class="btn btn-danger btn-lg mb-3" data-toggle="modal" data-target="#deleteQuizModal">Delete Quiz</button>
                        </div>
                    </div>

                    <!-- Modals for Actions -->
                    <!-- Create Quiz Modal -->
                    <div class="modal fade" id="createQuizModal" tabindex="-1" role="dialog" aria-labelledby="createQuizModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="createQuizModalLabel">Create New Quiz</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <label for="quizTitle">Quiz Title</label>
                                            <input type="text" class="form-control" id="quizTitle" placeholder="Enter quiz title">
                                        </div>
                                        <div class="form-group">
                                            <label for="quizDescription">Quiz Description</label>
                                            <textarea class="form-control" id="quizDescription" rows="3" placeholder="Enter quiz description"></textarea>
                                        </div>
                                        <!-- Add questions dynamically here -->
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save Quiz</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- View Submitted Answers Modal -->
                    <div class="modal fade" id="viewAnswersModal" tabindex="-1" role="dialog" aria-labelledby="viewAnswersModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="viewAnswersModalLabel">View Submitted Answers</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <ul class="list-group">
                                        <li class="list-group-item">Disciple 1: Quiz 1 - Score: 85</li>
                                        <li class="list-group-item">Disciple 2: Quiz 1 - Score: 78</li>
                                        <!-- More answers -->
                                    </ul>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Upload Lesson Modal -->
                    <div class="modal fade" id="uploadLessonModal" tabindex="-1" role="dialog" aria-labelledby="uploadLessonModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="uploadLessonModalLabel">Upload Lesson Document</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <label for="lessonTitle">Lesson Title</label>
                                            <input type="text" class="form-control" id="lessonTitle" placeholder="Enter lesson title">
                                        </div>
                                        <div class="form-group">
                                            <label for="uploadDocument">Upload Document</label>
                                            <input type="file" class="form-control-file" id="uploadDocument">
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-info">Upload</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Edit Quiz or Essay Modal -->
                    <div class="modal fade" id="editQuizModal" tabindex="-1" role="dialog" aria-labelledby="editQuizModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editQuizModalLabel">Edit Quiz or Essay</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <label for="selectQuiz">Select Quiz/Essay to Edit</label>
                                            <select class="form-control" id="selectQuiz">
                                                <option>Quiz 1</option>
                                                <option>Quiz 2</option>
                                                <option>Essay 1</option>
                                                <!-- Add more quizzes or essays as needed -->
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="editContent">Edit Content</label>
                                            <textarea class="form-control" id="editContent" rows="5" placeholder="Edit quiz or essay content here"></textarea>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-warning">Save Changes</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Quiz Modal -->
                    <div class="modal fade" id="deleteQuizModal" tabindex="-1" role="dialog" aria-labelledby="deleteQuizModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteQuizModalLabel">Delete Quiz</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <label for="deleteQuizSelect">Select Quiz to Delete</label>
                                            <select class="form-control" id="deleteQuizSelect">
                                                <option>Quiz 1</option>
                                                <option>Quiz 2</option>
                                                <!-- Add more quizzes as needed -->
                                            </select>
                                        </div>
                                        <div class="alert alert-danger" role="alert">
                                            Are you sure you want to delete this quiz? This action cannot be undone.
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-danger">Delete Quiz</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Search Functionality -->
                    <div class="row mb-3">
                        <div class="col">
                            <h5 class="text-primary">Search</h5>
                            <form class="form-inline d-flex">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search quizzes or lessons" aria-label="Search">
                                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                            </form>
                        </div>
                    </div>

                    <!-- Other sections: Image Carousel, Course Progress, Calendar, Weekly Assignments, Upcoming Events -->
                    <!-- Image Carousel Section -->
                    <div class="row mb-4">
                        <div class="col">
                            <div id="imageCarousel" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="https://via.placeholder.com/800x400" class="d-block w-100 rounded" alt="Church Image 1">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="https://via.placeholder.com/800x400" class="d-block w-100 rounded" alt="Church Image 2">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="https://via.placeholder.com/800x400" class="d-block w-100 rounded" alt="Church Image 3">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- Course Progress Section -->
                    <div class="row mb-3">
                        <div class="col">
                            <h5 class="text-primary">Course Progress</h5>
                            <div class="progress mb-2">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">60% Complete</div>
                            </div>
                            <ul class="list-group">
                                <li class="list-group-item">Course 1 - Completed</li>
                                <li class="list-group-item">Course 2 - 60% Complete</li>
                                <li class="list-group-item">Course 3 - Upcoming</li>
                            </ul>
                        </div>
                    </div>
                    <!-- Calendar Section -->
                    <div class="row mb-3">
                        <div class="col">
                            <h5 class="text-primary">Calendar</h5>
                            <div id="calendar">
                                <!-- Calendar integration can be done here, such as using a JavaScript calendar library -->
                            </div>
                        </div>
                    </div>
                    <!-- Weekly Assignments Section -->
                    <div class="row mb-3">
                        <div class="col">
                            <h5 class="text-primary">Weekly Assignments</h5>
                            <ul class="list-group">
                                <li class="list-group-item">Assignment 1 - Due: Monday</li>
                                <li class="list-group-item">Assignment 2 - Due: Wednesday</li>
                                <li class="list-group-item">Assignment 3 - Due: Friday</li>
                            </ul>
                            <div class="text-right mt-2">
                                <button class="btn btn-outline-primary">View All Assignments</button>
                            </div>
                        </div>
                    </div>
                    <!-- Upcoming Events or Sessions Section -->
                    <div class="row mb-3">
                        <div class="col">
                            <h5 class="text-primary">Upcoming Events/Sessions</h5>
                            <ul class="list-group">
                                <li class="list-group-item">Session 1 - Location: Branch A - Date: August 25</li>
                                <li class="list-group-item">Event 2 - Location: Branch B - Date: September 5</li>
                                <li class="list-group-item">Session 3 - Location: Branch C - Date: September 15</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>






