
@{
    ViewBag.Title = "Forgot Password";
}
@model breakthrough.Models.ForgotPasswordViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="text-center mb-4">Forgot Your Password?</h2>
                    <p class="text-center mb-4">Enter your email address and we'll send you a link to reset your password.</p>
                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Reset Password</button>
                        </div>
                    </form>
                    <hr />
                    <p class="text-center">
                        <a asp-action="Login" class="text-decoration-none">Back to Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

