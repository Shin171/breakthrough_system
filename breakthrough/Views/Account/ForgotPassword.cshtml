
@{
    ViewBag.Title = "ForgotPassword";
}
@model breakthrough.Models.User
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="text-center mb-4">Forgot Your Password?</h2>
                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email address" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Send Reset Link</button>
                        </div>
                    </form>
                    <hr />
                    <div class="text-center">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-secondary btn-lg">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

