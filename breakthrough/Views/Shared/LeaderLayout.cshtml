<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Breakthrough Church System</title>
    @Styles.Render("~/Content/bootstrap-flaty.css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        /* Custom styles for the sidebar */
        #sidebar {
            width: 250px;
            height: 100%;
            position: fixed;
            left: -250px;
            top: 0;
            background-color: #ffffff; /* Changed to white */
            padding-top: 60px;
            transition: left 0.3s;
            z-index: 1045;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

            #sidebar.active {
                left: 0;
            }

            #sidebar .nav-link {
                color: #343a40; /* Dark text for better contrast */
            }

                #sidebar .nav-link.active {
                    background-color: #007bff;
                    color: #ffffff;
                }

        #content {
            transition: margin-left 0.3s;
            margin-left: 0;
        }

            #content.active {
                margin-left: 250px;
            }

        /* Fixed sidebar toggle button */
        .sidebar-toggle {
            position: fixed;
            left: 15px;
            top: 15px;
            z-index: 1050;
        }

        /* Profile section styles */
        .profile-section {
            text-align: center;
            margin-bottom: 20px;
            color: #343a40;
            padding: 0 15px;
        }

            .profile-section img {
                border-radius: 50%;
                height: 100px;
                width: 100px;
                object-fit: cover;
                border: 2px solid #007bff;
            }

            .profile-section input[type="file"] {
                display: none;
            }

            .profile-section label {
                cursor: pointer;
                color: #007bff;
                display: block;
                margin-top: 10px;
            }

        /* Adjust navbar height to align with fixed toggle button */
        .navbar {
            padding-top: 15px;
            padding-bottom: 15px;
        }

        /* Optional: Adjust footer to stay at the bottom */
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .body-content {
            flex: 1;
        }
    </style>
</head>
<body>

    <!-- Fixed Sidebar Toggle Button -->
    <button class="btn btn-dark sidebar-toggle" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <div id="sidebar">
        <div class="profile-section">
            <img src="~/images/defaultProfile.jpg" alt="Profile Picture" id="profileImage">
            <input type="file" id="profilePictureInput" accept="image/*">
            <label for="profilePictureInput"><i class="fas fa-camera"></i> Change Picture</label>
            <h4>@User.Identity.Name</h4> <!-- Displaying the user's name -->
        </div>

        <ul class="nav flex-column">
            <li class="nav-item">
                @Html.ActionLink("Dashboard", "Dashboard", "Leader", new { area = "" }, new { @class = "nav-link " + (ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "") })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Activities", "Activities", "Leader", new { area = "" }, new { @class = "nav-link " + (ViewContext.RouteData.Values["action"].ToString() == "Activities" ? "active" : "") })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Calendar", "Calendar", "Leader", new { area = "" }, new { @class = "nav-link " + (ViewContext.RouteData.Values["action"].ToString() == "Calendar" ? "active" : "") })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Notifications", "Notifications", "Leader", new { area = "" }, new { @class = "nav-link " + (ViewContext.RouteData.Values["action"].ToString() == "Notifications" ? "active" : "") })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Message", "Message", "Leader", new { area = "" }, new { @class = "nav-link " + (ViewContext.RouteData.Values["action"].ToString() == "Message" ? "active" : "") })
            </li>
            <li class="nav-item">
                <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-expanded="false">Settings</a>
                <ul class="dropdown-menu" aria-labelledby="dropdown01">
                    <li>@Html.ActionLink("My Profile", "Profile", "Leader", new { area = "" }, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Events", "Events", "Leader", new { area = "" }, new { @class = "dropdown-item" })</li>
                    <li><hr class="dropdown-divider"></li>
                    <li>@Html.ActionLink("Logout", "Logout", "Leader", new { area = "" }, new { @class = "dropdown-item" })</li>
                </ul>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div id="content" class="container-fluid body-content">
        @RenderBody()
        <hr />
    </div>

    <footer class="bg-light text-center text-lg-start mt-auto w-100">
        <div class="container-fluid p-4" style="background-color: #f8f9fa;">
            <div class="row">
                <div class="col-lg-6 col-md-12 mb-4 mb-md-0 text-start">
                    <h5 class="text-uppercase">About Breakthrough Church</h5>
                    <p>
                        Breakthrough Church is dedicated to building a strong community through faith, worship, and outreach programs. Join us for weekly services, volunteer opportunities, and much more.
                    </p>
                    <p>
                        Location: Paso, Sta. Maria, Bulacan<br />
                        Service Times: Sundays at 8:00 AM and 11:00 AM<br />
                        Contact: breakthroughchurch.com | #
                    </p>
                </div>

                <div class="col-lg-3 col-md-6 mb-4 mb-md-0 text-start">
                    <h5 class="text-uppercase">Follow Us</h5>
                    <ul class="list-unstyled d-flex justify-content-start">
                        <li class="mx-2">
                            <a href="https://facebook.com" target="_blank" class="text-dark">
                                <i class="fab fa-facebook fa-2x"></i>
                            </a>
                        </li>
                        <li class="mx-2">
                            <a href="https://instagram.com" target="_blank" class="text-dark">
                                <i class="fab fa-instagram fa-2x"></i>
                            </a>
                        </li>
                        <li class="mx-2">
                            <a href="https://github.com" target="_blank" class="text-dark">
                                <i class="fab fa-github fa-2x"></i>
                            </a>
                        </li>
                        <li class="mx-2">
                            <a href="https://youtube.com" target="_blank" class="text-dark">
                                <i class="fab fa-youtube fa-2x"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            &copy; @DateTime.Now.Year Breakthrough Church System | All rights reserved
        </div>
    </footer>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        // Sidebar Toggle Functionality
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('active');
            document.getElementById('content').classList.toggle('active');
        });

        // Image Picker Functionality
        const profileImage = document.getElementById('profileImage');
        const profilePictureInput = document.getElementById('profilePictureInput');

        profilePictureInput.addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    profileImage.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
