<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,height=device-height, initial-scale=1.0">
    <title>Breakthrough</title>
    <link rel="icon" type="image/jpeg" href="~/images/bcfLogo.jpg" />

    @Styles.Render("~/Content/bootstrap-flaty.css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- Dark/Light Mode Styles -->
    <style>
        /* Dark mode styles */
        body.dark-mode {
            background-color: #121212;
            color: #e0e0e0;
        }

        .dark-mode .navbar {
            background-color: #333;
            color: #ffffff;
        }

        .dark-mode .footer {
            background-color: #333;
            color: #ffffff;
        }

        .dark-mode .card, .dark-mode .container-fluid {
            background-color: #1e1e1e;
            color: #ffffff;
        }

        .dark-mode .form-control {
            background-color: #2b2b2b;
            color: #ffffff;
            border: 1px solid #444444;
        }

        .dark-mode .btn {
            background-color: #444444;
            color: #ffffff;
        }
    </style>

    <!-- JavaScript for Dark/Light Mode -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mode = localStorage.getItem('theme') || 'light';
            if (mode === 'dark') {
                document.body.classList.add('dark-mode');
            }

            document.getElementById('theme-toggle').checked = mode === 'dark';
        });

        function toggleTheme() {
            if (document.body.classList.contains('dark-mode')) {
                document.body.classList.remove('dark-mode');
                localStorage.setItem('theme', 'light');
            } else {
                document.body.classList.add('dark-mode');
                localStorage.setItem('theme', 'dark');
            }
        }
    </script>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm bg-light clearfix border-bottom shadow-lg" data-bs-theme="light">
        <div class="container-fluid shadow-s">
            <a href="#" class="navbar-brand">
                <img src="~/images/nobg.png" alt="Church Logo" class="mr-3" style="height: 50px; width: 50px;" />
                Breakthrough Church System
            </a>
            <button class="navbar-toggler btn-secondary pb-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto w-100">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link " + (ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "") })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Calendar", "Calendar", "Home", new { area = "" }, new { @class = "nav-link " + (ViewContext.RouteData.Values["action"].ToString() == "Calendar" ? "active" : "") })
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto d-flex ms2">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Dashboard", "Dashboard", "Account", new { area = "" }, new { @class = "nav-link " + (ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "") })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item btn btn-primary">
                            @Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "nav-link text-white " + (ViewContext.RouteData.Values["action"].ToString() == "Register" ? "active" : "") })
                        </li>
                    }
                </ul>

                <!-- Dark/Light Mode Toggle Switch -->
                <div class="form-check form-switch ms-3">
                    <input class="form-check-input" type="checkbox" id="theme-toggle" onclick="toggleTheme()">
                    <label class="form-check-label" for="theme-toggle">Dark Mode</label>
                </div>

            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center text-lg-start mt-auto w-100 shadow-lg footer">
        <div class="container-fluid p-4" style="background-color: #f8f9fa;">
            <div class="row">
                <div class="col-lg-6 col-md-12 mb-4 mb-md-0 text-start">
                    <h5 class="text-uppercase">About Breakthrough Church</h5>
                    <p>
                        Breakthrough Church is dedicated to building a strong community through faith, worship, and outreach programs. Join us for weekly services, volunteer opportunities, and much more.
                    </p>
                    <p>
                        Location: Paso, Sta. Maria, Bulacan<br />
                        Service Times: Sundays at 8:00 AM and 11:00 AM<br />
                        Contact: breakthroughchurch.com | #
                    </p>
                </div>

                <div class="col-lg-3 col-md-6 mb-4 mb-md-0 text-start">
                    <h5 class="text-uppercase">Follow Us</h5>
                    <ul class="list-unstyled d-flex justify-content-start">
                        <li class="mx-2">
                            <a href="https://facebook.com" target="_blank" class="text-dark">
                                <i class="fab fa-facebook fa-2x"></i>
                            </a>
                        </li>
                        <li class="mx-2">
                            <a href="https://instagram.com" target="_blank" class="text-dark">
                                <i class="fab fa-instagram fa-2x"></i>
                            </a>
                        </li>
                        <li class="mx-2">
                            <a href="https://github.com" target="_blank" class="text-dark">
                                <i class="fab fa-github fa-2x"></i>
                            </a>
                        </li>
                        <li class="mx-2">
                            <a href="https://youtube.com" target="_blank" class="text-dark">
                                <i class="fab fa-youtube fa-2x"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            &copy; @DateTime.Now.Year Breakthrough Church System | All rights reserved
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
